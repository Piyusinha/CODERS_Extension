<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4.5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/linebackgroud"
        ></LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:maxWidth="30dp"
        android:maxHeight="30dp"
        android:src="@drawable/hackerrank" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/goweb"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="10dp">


    </ImageView>

    <TextView
        android:id="@+id/hackerrankname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="22dp"
        android:text="COMPETITION"
        android:textSize="20sp"

        android:fontFamily="@font/orbitronbold"


        />

    <TextView
        android:id="@+id/hackerrankdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="50dp"
        android:text="HackerRank brings you the fun of solving Projecteuler challenges with hidden test cases and time limit."
        android:fontFamily="@font/righteous"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/righteous"
        android:text="START DATE:"
        android:textSize="10sp"


        />
    <TextView
        android:id="@+id/hackerrankstart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="120dp"
       android:fontFamily="@font/righteous"
        android:text="START DATE"
        android:textSize="10sp"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="140dp"
       android:fontFamily="@font/righteous"
        android:text="END DATE:"

        android:textSize="10sp"></TextView>

    <TextView
        android:id="@+id/hackerrankend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="140dp"
       android:fontFamily="@font/righteous"
        android:text="END DATE"
        android:textSize="10sp"
        android:layout_marginBottom="15dp"


        />


    <Button
        android:id="@+id/linkhackerrank"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent"/>


</RelativeLayout>
</android.support.v7.widget.CardView>